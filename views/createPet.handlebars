<div id="create">
  <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex flex-row-reverse">
    <button id="logout" class="btn btn-warning mx-2">Log Out</button>
    <p class="mx-2">Welcome {{email}}!</p>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8 main mt-2">
        <h1 class="text-center">Create a Pet!</h1>
        <form class="create-pet mt-4">
          <div class="form-group">
            <label for="pet-name">Pet Name</label>
            <input class="form-control" id="pet-name">
          </div>
          <div class="form-group">
            <label for="pet-species">Pet Species</label>
            <select class="form-control" id="pet-species">
              <option>Cat</option>
              <option>Dog</option>
              <option>Hamster</option>
            </select>
          </div>
          <div class="form-group">
            <label for="pet-color">Pet Color</label>
            <select class="form-control" id="pet-color">
              <option>Natural</option>
              <option>Red</option>
              <option>Blue</option>
              <option>Green</option>
            </select>
          </div>
          <button type="submit" class="btn btn-warning mb-4">Create!</button>
        </form>
        <a href="/view">
          <p class="text-center">Return to Your Pets</p>
        </a>
      </div>
    </div>
  </div>
  <footer class="footer pt-3 mt-4">
    <div class="container">
      <p class="text-center">PetLife &copy; 2019</p>
    </div>
  </footer>


</div>

